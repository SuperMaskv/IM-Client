<UserControl x:Class="IM_Client.Views.ReceiveFileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IM_Client.Views"
             mc:Ignorable="d" 
             Background="{StaticResource MaterialDesignPaper}"
             d:DesignHeight="247.2" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="StatusLabel" Content="Status" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
        <ProgressBar Grid.Row="1" Height="25"/>
        <Button Grid.Row="2" Width="247.2" Content="取消"/>
    </Grid>
</UserControl>
